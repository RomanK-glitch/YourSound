<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkGray">

    <Button
            android:text=""
            android:background="@drawable/control_play_white"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/bottom_buttonPlay"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="playBtnClick"
    />

    <TextView
            android:text="@string/current_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCurrentTrackName"
            android:layout_alignTop="@+id/bottom_buttonPlay"
            android:textColor="@color/textColorWhite" android:textSize="14sp" android:layout_toEndOf="@+id/bottom_buttonPlay"
            android:layout_toRightOf="@+id/bottom_buttonPlay"
            android:layout_toStartOf="@+id/buttonLike"
            android:layout_toLeftOf="@+id/buttonLike"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-10dp"
            android:textAlignment="center"
            />

    <TextView
            android:text="@string/current_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCurrentTrackAuthor"
            android:layout_alignTop="@+id/bottom_buttonPlay"
            android:textColor="@color/hintColor" android:textSize="12sp" android:layout_toEndOf="@+id/bottom_buttonPlay"
            android:layout_toRightOf="@+id/bottom_buttonPlay"
            android:layout_toStartOf="@+id/buttonLike"
            android:layout_toLeftOf="@+id/buttonLike"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
    />

    <Button
            android:text=""
            android:background="@drawable/heart_white"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp" android:id="@+id/buttonLike"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

</RelativeLayout>