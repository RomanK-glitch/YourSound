<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="34dp"
            android:layout_height="34dp" android:src="@drawable/purple_user" android:id="@+id/commentImage"
            android:contentDescription="@string/track_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
    />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_view_comment" android:layout_toEndOf="@+id/commentImage"
            android:layout_toRightOf="@+id/commentImage" android:layout_marginLeft="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/commentImage"
            android:background="@drawable/comment_background"
            android:padding="7dp"
            android:textSize="18sp"
    />

</RelativeLayout>
