<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.roman.yoursound.CircleNetworkImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/purple_user"
            android:id="@+id/user_image_list"
            android:contentDescription="@string/track_image"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textColor="@color/mainTextColor"
            android:layout_alignTop="@+id/user_image_list"
            android:layout_toRightOf="@+id/user_image_list"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:id="@+id/user_list_user_name"
            android:layout_alignBottom="@+id/user_image_list"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
    >
    </TextView>

</RelativeLayout>